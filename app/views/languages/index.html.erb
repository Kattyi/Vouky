<% provide(:title, "Languages") %>

<h1>Languages</h1>

<% @languages.each_slice(4) do |row| %>
    <div class="card-group">
      <% row.each do |language| %>
          <div class="card">
            <div class="card-block">
              <h4 class="card-title">
                <%= link_to language[0], dictionaries_path(language: @languages_ids.find_by(name: language[0])[:id]) %>
              </h4>
            </div>
            <div class="card-footer">
              <small class="text-muted text-right"><%= pluralize(language[1], 'word') %></small>
              <br>
              <small class="text-muted text-right">id: <%= @languages_ids.find_by(name: language[0])[:id] %></small>
            </div>
          </div>
      <% end %>
    </div>
<% end %>
