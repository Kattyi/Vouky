<% provide(:title, @dictionary.word) %>
<h1>Details</h1>

<table class="table">
  <tr>
    <th class="text-center">WORD</th>
    <th class="text-center">TRANSLATION</th>
  </tr>

  <tr>
    <td class="text-center"><%= @dictionary.word %></td>
    <td class="text-center"><%= @dictionary.translation %></td>
  </tr>
</table>

<div class="btn-group" role="group" aria-label="Actions">
  <%= link_to 'Back', dictionaries_path, class: "btn btn-outline-secondary" %>
  <%= link_to 'Edit', edit_dictionary_path(@dictionary), class: "btn btn-outline-info" %>
  <%= link_to 'Delete', dictionary_path(@dictionary), method: :delete, class: "btn btn-outline-danger" %>
</div>