<% provide(:title, 'Edit user') %>
<% provide(:button_text, 'Save changes') %>

<h1>Update your profile</h1>

<div class="row">
  <div class="col-3 col-md-offset-3"></div>
  <div class="col-4 col-md-offset-3">
    <%= render 'form' %>
  </div>
  <div class="col-1 col-md-offset-3">
    <div class="gravatar_edit push-right">
      <%= gravatar_for @user %>
      <br>
      <br>
      <a class="btn btn-success" href="http://gravatar.com/emails" target="_blank" rel="noopener">Change</a>
    </div>
  </div>
  <div class="col-4 col-md-offset-3"></div>

</div>