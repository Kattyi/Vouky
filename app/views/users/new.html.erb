<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-3 col-md-offset-3"></div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <p><%= f.text_field :name, class: "form-control", placeholder: "Name" %></p>
        <p><%= f.email_field :email, class: "form-control", placeholder: "E-mail" %></p>
        <p><%= f.password_field :password, class: "form-control", placeholder: "Password" %></p>
        <p><%= f.password_field :password_confirmation, class: "form-control", placeholder: "Retype password" %></p>
        <p class="text-right"><%= f.submit "Sign up", class: "btn btn-primary" %></p>
    <% end %>
  </div>
  <div class="col-md-3 col-md-offset-3"></div>
</div>