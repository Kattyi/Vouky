<% provide(:title, 'All users') %>

<h1>All users</h1>

<%= render 'layouts/pagination', table: @users %>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Avatar</th>
    <th>User name</th>
    <th></th>
  </tr>
  </thead>

  <% @users.each do |user| %>
      <tr>
        <td><%= gravatar_for(user) %></td>
        <td><%= user.name %></td>
        <td class="text-right">
          <% if current_user.admin? && !current_user?(user) %>
              <%= link_to "delete", user, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
          <% end %>
        </td>
      </tr>
  <% end %>
</table>

<%= render 'layouts/pagination', table: @users %>