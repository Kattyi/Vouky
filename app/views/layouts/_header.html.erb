<header>
  <nav class="navbar navbar-toggleable-sm navbar-light bg-faded">
    <%= link_to image_tag("vouky.svg", alt: "Vouky logo", id: "logo", class: "navbar-brand"), root_path %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li><%= link_to 'Home', root_path, class: "nav-link" %></li>
        <li><%= link_to 'Dictionary', dictionaries_path, class: "nav-link" %></li>

        <% if logged_in? %>
            <li><%= link_to "Users", '#', class: "nav-link" %></li>
            <li><%= link_to "Profile", current_user, class: "nav-link" %></li>
            <li><%= link_to "Settings", '#', class: "nav-link" %></li>
            <li><%= link_to "Log out", logout_path, method: :delete, class: "nav-link" %></li>
        <% else %>
            <li class="nav-item"><%= link_to 'Log in', login_path, :class => "nav-link" %></li>
        <% end %>

      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="text" placeholder="Search">
        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>
</header>